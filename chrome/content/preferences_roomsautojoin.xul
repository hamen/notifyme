<?xml-stylesheet href="chrome://notifyme/skin/overlay.css" type="text/css"?>
<!DOCTYPE overlay SYSTEM "chrome://notifyme/locale/overlay.dtd">

<overlay xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  
<prefpane id="roomsautojoin-pane">

  <preferences>
    <preference id="notifyme-autojoin"
		name="extensions.notifyme.autojoin"
		type="bool"
		instantApply="true" />
  </preferences>
  <vbox>
    
    <checkbox preference="notifyme-autojoin"
	      id="roomsautojoin"
	      label="Enable rooms autojoin"/>
    
    <label control="roomid" value="Specify a room and a nickname:"/>
    
  <grid>
    <columns>
      <column flex="2"/>      
      <column flex="1"/>
    </columns>
    <rows>
      <row>
	<textbox id="roomid"
		 value="...@places.sameplace.cc/"

		 onkeypress="return notifymeRoomsAutojoin.receivedRET(event);"/>
	</row>
      <row>
	<textbox id="nickid"
		 value="nickname"
		 onkeypress="return notifymeRoomsAutojoin.receivedRET(event);"/>
	
	<button label="Add"
		accesskey="A"
		oncommand="notifymeRoomsAutojoin.addItem();"
		/>
      </row>
      <listbox id="thelist"
	       onselect="document.getElementById('removebuttonid').disabled = false;">
      </listbox>
      <button id="removebuttonid"
	      label="Remove"
	      accesskey="R"
		disabled="true"
	      oncommand="notifymeRoomsAutojoin.removeSelectedRoom();"/>
    </rows>
  </grid>
  </vbox>
  
</prefpane>
</overlay>
